/* components/book/index.wxss */
.container{
    margin-top:30rpx;
    position: relative; 
    width: 240rpx;
    height: 360rpx;
    display: flex;
    flex-direction: column;
    box-shadow:2px 2px 3px #e3e3e3;
}

.container image{
    width:100%;
    height:100%;
    border-radius: 2px;
}

.description{
    padding:5rpx 10rpx 8rpx 15rpx;
    position:absolute;
    bottom: 0;
    /* 240 - 10 - 15 = 215 */
    width: 216rpx;
    font-size:24rpx; 
    background-color: #ffffff;
    display: flex;
    flex-direction: column;
    border-bottom-right-radius: 2px;
    border-bottom-left-radius: 2px;
}

.title{
    margin-top: 10rpx;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
}

.author{
    margin-bottom: 10rpx;
    font-size: 20rpx;
    color: #999999;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
}

.foot{
    font-size: 20rpx;
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
}

.footer{
    color: #666666
}