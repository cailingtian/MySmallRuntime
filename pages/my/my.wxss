/* pages/my/my.wxss */
.container {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color: #f5f5f5;
}

.bg {
    width: 750rpx;
    height: 574rpx;
}
.avatar-container{
    display: flex;
    flex-direction: column;
    align-items: center;
}

.avatar-position {
    position: absolute;
    top: 255rpx;
}

.avatar {
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    margin-bottom: 10rpx;
    overflow: hidden;
}

.about-container {
    padding: 0 100rpx;
    width: 550rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    position: absolute;
    top: 440rpx;
}

.about-us{
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    
}

.book-num{
    font-size:36rpx;
    color:#000000;
}
  
.description{
    font-size:24rpx;
    color:#999999;
}
.about-us image{
    width:34rpx;
    height:34rpx;
}

.preview-container{
    margin-top:30rpx;
    display: flex;
    flex-direction: row;
    padding:0 45rpx;
    flex-wrap: wrap;
    justify-content: space-between;
}

.headline{
    margin:30rpx 326rpx 0 354rpx;
    width:98rpx;
    height:42rpx;
}
  
.preview{
    margin-bottom: 30rpx;
}