/* pages/book-detail/book-detail.wxss */
.container {
    background-color: #f5f5f5;
    width: 100%;
}

  
.head {
    background-color: #fff;
    padding-top: 40rpx;
    padding-bottom: 40rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    /* box-shadow:1px 1px 1px #e3e3e3; */
}
  
.image {
    width: 200rpx;
    height: 300rpx;
    box-shadow:2px 2px 3px #e3e3e3;
}
  
.title {
    color: #2f2f2f;
    margin-top: 20rpx;
    font-size: 38rpx;
    font-weight: 600;
}

.author {
    font-size: 28rpx;
    color: #999;
    /* margin-bottom: 30rpx; */
}

.sub-container {
    width: 690rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: 30rpx;
    background-color: #fff;
    padding: 30rpx;
}

.headLine {
    font-size: 30rpx;
    font-weight: 600;
    color: #2f2f2f;
    /* margin-top:30rpx; */
    margin-bottom: 20rpx;
}

.comment-container{
    width: 100%;
    padding: 0 30rpx;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    flex-wrap: wrap;
    align-items: center;
}

.tag {
    margin-right: 15rpx;
    margin-bottom: 10rpx;
    border-radius: 15px !important;
    -webkit-border-radius: 15px !important;
    -moz-border-radius: 15px !important;
    -ms-border-radius: 15px !important;
    -o-border-radius: 15px !important;
}

.num {
    margin-left: 12rpx;
    font-size: 22rpx;
    color: #aaaaaa;
}
/* 子代选择器给第1、2 个评论tag上色*/
.comment-container > v-tag:nth-child(1) > view {
    background-color: #fffbdd;
}

.comment-container > v-tag:nth-child(2) > view {
    background-color: #eefbff;
}

.content {
    text-indent: 62rpx; 
    font-weight: 500;
 }

 .detail-cotanier{
     width: 100%;
     display: flex;
     flex-direction: row;
     justify-content: flex-start;
     margin-bottom: 100rpx;
     font-size: 28rpx;
     color: #666666
 }

 .vertical{
     display: flex;
     flex-direction: column;
 }

 .description {
    color: #999;
    margin-right: 30rpx;
}


.post-container {
    height: 100rpx;
    box-shadow: 1px -1px 1px #e3e3e3;
    position: fixed;
    width: 690rpx;
    background-color: #fff;
    bottom: 0;
    display: flex;
    flex-direction: row;
    align-items: center;
    padding: 0 30rpx;
    justify-content: space-between;
    /* z-index: 99; */
}

.post-fake {
    display: flex;
    flex-direction: row;
    align-items: center;
    height: 60rpx;
    width: 460rpx;
    border: 1px solid #999;
    border-radius: 15px;
    font-size: 22rpx;
    padding-left: 20rpx;
}

.like-container {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
}

.like {
    margin-right: 30rpx;
    margin-top: 10rpx;
}

.share-btn{
    margin-top:28rpx;
    margin-left:10rpx;
}
  
.share{
    /* padding:10rpx; */
    width:40rpx;
    height:40rpx;
}

.posting-container {
    bottom: 0;
    position: fixed;
    display: flex;
    flex-direction: column;
    align-items: center;
    /* width:690rpx; */
    background-color: #fff;
    width: 100%;
    z-index: 999;
}
.posting-container .comment-container {
    width: 690rpx;
    padding: 0 30rpx;
    
}
.posting-container .comment-container {
    padding: 40rpx 30rpx 0 30rpx;
}


.post-header {
    width: 100%;
    border-bottom: 1px solid #f5f5f5;
    border-top: 1px solid #f5f5f5;
    height: 100rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
}

.post-header text {
    padding: 25rpx;
}

.cancel {
    color: #666;
}

.post {
    width: 690rpx;
    margin: 30rpx auto;
    height: 56rpx;
    background-color: #f5f5f5;
    border-radius: 15px;
    padding-left: 25rpx;
}

.post-header > text:first-child {
    font-size: 28rpx;
    color: #bbb;
}

.shadow {
    color: #999999
}
